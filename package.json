{
  "name": "ilicon",
  "version": "1.0.1",
  "description": "A small package for fetching site favicons & nicely displaying them inline.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/DanteASC4/iLicon",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "biome check --apply ./src",
    "build": "tsup src/index.ts --format cjs,esm --minify --dts",
    "release": "pnpm build && changeset publish"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "favicon",
    "favicons",
    "icons",
    "links",
    "link icons",
    "inline favicon"
  ],
  "author": "DanteASC4",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@biomejs/biome": "^1.5.0",
    "@changesets/cli": "^2.27.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
